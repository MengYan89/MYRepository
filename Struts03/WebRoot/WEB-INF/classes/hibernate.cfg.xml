<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		<!-- 链接名字 -->
		<property name="myeclipse.connection.profile">
			hibernateshop
		</property>
		<!-- 数据库连接配置 -->
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="connection.password">199689</property>
		<property name="connection.username">root</property>
		<property name="connection.url">
			jdbc:mysql://localhost:3306/shop
		</property>

		<!-- 数据库连接池大小 -->
		<property name="c3p0.min_size">5</property><!--在连接池中可用数据库连接的最小数目-->
		<property name="c3p0.max_size">30</property><!--在连接池中所有数据库连接的最大数目-->
		<property name="c3p0.time_out">1800</property><!--设定数据库连接的超时时间-->
		<property name="c3p0.max_statement">50</property>
		<!--可以被缓存的PreparedStatement的最大数目-->

		<!-- SQL方言  -->
		<property name="dialect">
			org.hibernate.dialect.MySQL5Dialect
		</property>
		<!-- 控制台输出sql语句 -->
		<property name="show_sql">true</property>
		<!-- 根据配置更新数据库 -->
		<property name="hbm2ddl.auto">update</property>
		<!-- 注册实体映射类 -->
		<mapping resource="com/my/entity/Admin.hbm.xml" />
		<mapping resource="com/my/entity/Users.hbm.xml" />

	</session-factory>

</hibernate-configuration>